<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/framexx"
    app:cardCornerRadius="@dimen/mid"
    app:cardElevation="@dimen/mid">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="03:50 am"
            android:fontFamily="@font/beinarnormal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/TxtMessagedate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بيوتى سنتر 2"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/mid"
            android:fontFamily="@font/beinarnormal"
            android:gravity="right"
            android:layout_toRightOf="@id/TxtMessagedate"
            android:layout_toLeftOf="@id/ImgMessageprofiel"
            android:id="@+id/TxtMessageperson"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cat2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/ImgMessageprofiel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بيوتى سنتر 2"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/small"
            android:fontFamily="@font/beinarnormal"
            android:gravity="right"
            android:layout_toRightOf="@id/TxtMessagedate"
            android:layout_toLeftOf="@id/ImgMessageprofiel"
            android:layout_below="@id/TxtMessageperson"
            android:id="@+id/TxtMessagelast"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>