<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AdvanceSearch">
    <android.support.v7.widget.CardView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/cart"
            android:layout_width="@dimen/iconwidth"
            android:layout_height="@dimen/iconheight"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/close"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:fontFamily="@font/beinarnormal"
            android:text="@string/advancesearch"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mid"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center|center_vertical"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="@dimen/iconwidth"
            android:layout_height="@dimen/iconheight"
            android:src="@drawable/house_1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>


    </android.support.v7.widget.CardView>


    <Spinner
        android:id="@+id/SpMadina"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_rect"
        android:entries="@array/fisrt"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/colorPrimary" />
    <Spinner
        android:id="@+id/SpVillage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_rect"
        android:entries="@array/second"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/colorPrimary" />
    <Spinner
        android:id="@+id/SpCat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_rect"
        android:entries="@array/third"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/colorPrimary" />
    <Spinner
        android:id="@+id/SpCat2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_rect"
        android:entries="@array/fourth"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/colorPrimary" />
    <Spinner
        android:id="@+id/SpCat3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_rect"
        android:entries="@array/fourth2"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/colorPrimary" />

    <Button
        android:id="@+id/Btlogin"
        style="@style/button"
        android:text="@string/search" />
</LinearLayout>