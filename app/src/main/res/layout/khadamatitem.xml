<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:id="@+id/cardview"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    app:cardElevation="@dimen/small">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/Imgkhadamatitemimage"
        android:src="@drawable/cat"
        android:scaleType="fitXY"
        app:riv_corner_radius_top_right="15dp"
        app:riv_corner_radius_top_left="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:text="قص الشعر"
        android:gravity="center"
        android:textSize="@dimen/mid"
        android:fontFamily="@font/beinarnormal"
        android:textStyle="bold"
        android:id="@+id/Txtkhadamatitemtitle"/>
</android.support.v7.widget.CardView>