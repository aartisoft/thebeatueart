<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/frame1"
    android:background="@drawable/curvedshape">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/salon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/TxtBookItemtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/beinarblack"
            android:gravity="center"
            android:text="اهلا بيك معانا فى التطبيق"
            android:textColor="@color/black"
            android:textSize="@dimen/mid" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TxtBookItemtitle"
            android:layout_toLeftOf="@id/profile_image"
            android:orientation="horizontal"
            android:id="@+id/cat">
            <TextView
                android:id="@+id/TxtBookItemtBranch"
                android:layout_width="wrap_content"
                android:textSize="@dimen/small"
                android:fontFamily="@font/beinarnormal"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="فرع 1"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="08:30 am 12:00 pm"
                android:layout_toLeftOf="@+id/TxtBookItemtBranch"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/beinarnormal"
                android:textSize="@dimen/small"
                android:id="@+id/TxtBookItemOpeningTime"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cat"
            android:layout_toLeftOf="@id/profile_image"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TxtBookItemPrice"
                android:layout_width="wrap_content"
                android:fontFamily="@font/beinarnormal"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="75 SR"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/TxtBookItemDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="08:30 am 12:00 pm"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/TxtBookItemPrice"
                android:fontFamily="@font/beinarnormal"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>