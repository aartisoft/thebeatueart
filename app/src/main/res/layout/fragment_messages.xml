<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/cartMessage"
                android:layout_width="@dimen/iconwidth"
                android:layout_height="@dimen/iconheight"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/group13"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:text="@string/messages"
                android:textSize="@dimen/mid"
                android:fontFamily="@font/beinarnormal"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="@dimen/iconwidth"
                android:layout_height="@dimen/iconheight"
                android:src="@drawable/search"
                android:layout_gravity="left|center_vertical"
                android:id="@+id/search00"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>


        </android.support.v7.widget.CardView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ReAllmessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لا توجد رسائل"
        android:layout_centerInParent="true"
        android:id="@+id/empmes"
        android:visibility="invisible"/>
</RelativeLayout>


</LinearLayout>