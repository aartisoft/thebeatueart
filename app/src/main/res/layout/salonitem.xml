<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/frame"
    android:background="@drawable/curvedshape">
  <com.makeramen.roundedimageview.RoundedImageView
      android:id="@+id/salonimage"
      android:layout_width="match_parent"
      android:layout_height="130dp"
      android:src="@drawable/salon"
      android:scaleType="fitXY"
      app:riv_corner_radius="35dp"/>
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:background="#ccFFFFFF">

        <TextView
            android:id="@+id/Txtsalonitemtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/beinarblack"
            android:gravity="center"
            android:text="اهلا بيك معانا فى التطبيق"
            android:textColor="@color/black"
            android:textSize="@dimen/small" />


        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rating"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Txtsalonitemtitle"
            android:layout_marginTop="10dp"
            android:rating="4.5"
            android:layout_centerHorizontal="true"
            style="@style/Widget.MaterialRatingBar.RatingBar" />
        <TextView
            android:id="@+id/Txtsalonitemlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/beinarblack"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="اهلا بيك معانا فى التطبيق"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/small"
            android:drawableRight="@drawable/address"/>

    </RelativeLayout>
</FrameLayout>